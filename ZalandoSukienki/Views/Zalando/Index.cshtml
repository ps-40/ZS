@model ZalandoSukienki.Models.RootModel

@{
    ViewBag.Title = "Zalando - Sukienki";
}


<div class="category-dresses">
    <ul class="dresses">
       <li><div><a href="#">Sukienki</a></div>
           <ul class="dresses-list">
               @foreach (var category in Model.CategoriesModel.Categories.Content)
               {
                <li class="@(Model.SelectedCategory != null && Model.SelectedCategory.Category.Key == category.Key ? "selected" : "")">
                    @Html.ActionLink(category.Name, "Dresses", "Zalando", new { categoryKey = category.Key }, null)
                </li>
               }
           </ul>
        </li>
    </ul>
</div>
<div class="menu">
    <form action="#">
        <fieldset>
            <label for="size">Rozmiar</label>
            <select name="size" id="size">
                <option>32</option>
                <option>34</option>
                <option>36</option>
                <option>38</option>
                <option>40</option>
                <option>42</option>
                <option>44</option>
                <option>46</option>
            </select>
            <button>Zamknij</button>
        </fieldset>
    </form>
</div>

@{ 
    if (Model.SelectedCategory != null)
    {
        Html.RenderPartial("DressCategory", Model.SelectedCategory);
    } 
}

